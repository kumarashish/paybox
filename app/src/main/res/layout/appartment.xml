<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"><LinearLayout
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@drawable/whitebox"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/back"
        android:layout_gravity="center_vertical"
        android:src="@drawable/back"
        android:layout_width="80dp"
        android:layout_height="30dp" />
    <common.CustomTextView
        android:id="@+id/heading"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/red"
        android:gravity="center_vertical"
        android:text="Appartment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/share"
            android:backgroundTint="@color/red"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/share"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <common.CustomTextView
android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"

        android:text="Select Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/year"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <common.CustomTextView
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"

            android:text="Select Month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/months"

android:layout_marginTop="-5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<View
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <common.CustomTextView

            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"

            android:text="Appartment Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <common.CustomTextView
            android:textSize="16dp"
            android:text=""
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <common.CustomTextView

            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"

            android:text="Address :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <common.CustomTextView
            android:textSize="16dp"
            android:id="@+id/address"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <common.CustomTextView

            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"

            android:text="Total Flats :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <common.CustomTextView
            android:textSize="16dp"
            android:id="@+id/units"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <common.CustomTextView


            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:text="Duration :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <common.CustomTextView
            android:textSize="16dp"
            android:id="@+id/duration"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <common.CustomTextView


            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"

            android:text="Total Cost :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <common.CustomTextView
            android:textSize="16dp"
            android:id="@+id/totalPrice"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <common.CustomTextView

            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"

            android:text="User Balance :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <common.CustomTextView
            android:textSize="16dp"
            android:id="@+id/balance"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:visibility="gone"
        android:textSize="14dp"
        android:id="@+id/pay"
        android:textColor="@color/white"
        android:text="Proceed"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="end"
        android:background="@drawable/blueborderbox"
        android:layout_width="100dp"
        android:layout_height="35dp" />
    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ListView
        android:visibility="visible"
        android:dividerHeight="0dp"
        android:id="@+id/listView"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/errorresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="@color/red"
            android:text="No Data"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
